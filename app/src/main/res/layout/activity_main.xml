<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.owncard.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">

        <ImageView
            android:id="@+id/studybooks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/studybooks"/>

        <TextView
            android:id="@+id/firstpartquote"
            style="@style/quote"
            android:text="@string/firstpartquote"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <TextView
            style="@style/quote"
            android:text="@string/secondpartquote"
            android:layout_alignParentRight="true"
            android:layout_below="@id/firstpartquote" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <TextView
                style="@style/keepcalm"
                android:text="@string/firstkeepcalm"
                />

            <TextView
                style="@style/keepcalm"
                android:text="@string/and"
                />

            <TextView
                style="@style/keepcalm"
                android:text="@string/study_on"
                />

        </LinearLayout>

    </RelativeLayout>


    <TextView
        style="@style/finaltext"
        android:gravity="center"
        android:text="@string/you_can_do_it"
        android:background="@color/colorPrimaryDark" />

</LinearLayout>
